  <h1 id="sign-up-header">Create a Tutoring Session</h1>

  <% if @errors %>
  <ul>
    <% @errors.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= simple_form_for @appointment do |f| %>
    <%= f.input :start_time, label: "Start Time", input_html: {class: "form-control"} %>

    <%= f.input :notes, label: "Notes", input_html: {class: "form-control"} %>
    <%= f.input :phase, label: "Mentor Phase", input_html: {class: "form-control"} %>
    <%= f.button :submit %>
  <% end %>
<!-- </div> -->
