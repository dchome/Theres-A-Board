  <h1 id="sign-up-header">New Tutoring Session</h1>

  <% if @errors %>
  <ul>
    <% @errors.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>

  <%= simple_form_for @appointment do |f| %>
    <%= f.date_select :start_time, label: "Day", as: :string, class: 'form-control datepicker' %>
    <%= f.time_select :start_time, label: "Start Time", input_html: {class: "form-control"} %>
    <%= f.input :length, collection: ["30", "60"], input_html: {multiple: false} %>
    <%= f.input :notes, label: "Notes", input_html: {class: "form-control"} %>
    <%= f.input :phase, collection: ["0", "1", "2", "3", "4+"], input_html: {multiple: false}  %>
    <%= f.button :submit, {:class => "btn btn-warning"}%>
  <% end %>
